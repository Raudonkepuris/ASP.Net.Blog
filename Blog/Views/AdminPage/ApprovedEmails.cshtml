@model IEnumerable<Blog.Models.ApprovedEmail>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-controller="ApprovedEmails" asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    <a asp-controller="ApprovedEmails" asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-controller="ApprovedEmails" asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-controller="ApprovedEmails" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
